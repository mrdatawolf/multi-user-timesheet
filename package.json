{
  "name": "multi-user-attendance",
  "version": "1.6.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 6029",
    "build": "node scripts/build-with-brand-uri.js",
    "start": "next start -p 6029",
    "start:standalone": "node .next/standalone/server.js",
    "lint": "next lint",
    "db:init": "tsx scripts/init-db.ts",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:seed-employees": "tsx scripts/seed-employees.ts",
    "db:seed-demo": "tsx scripts/seed-demo.ts",
    "dev:demo": "cross-env DEMO_MODE=true next dev -p 6029",
    "sync-version": "node scripts/sync-version.js",
    "select-brand": "node scripts/select-brand.js",
    "electron:start": "electron electron-app",
    "electron:build": "node scripts/sync-version.js && electron-builder --config electron-builder.json",
    "server:installer": "node scripts/build-server-installer.js",
    "build:all": "npm run clean && npm run select-brand && npm run build && node scripts/package-standalone.js && npm run electron:build && npm run server:installer && node scripts/copy-to-distribute.js",
    "build:all:brands": "node scripts/build-all-brands.js",
    "build:branded": "npm run select-brand && npm run build",
    "db:reset": "tsx scripts/reset-database.ts",
    "auth:init": "tsx scripts/init-auth-db.ts",
    "clean": "node -e \"const fs=require('fs'); ['dist-electron','dist-server','temp-server-build'].forEach(d=>{if(fs.existsSync(d)){fs.rmSync(d,{recursive:true,force:true});console.log('Cleaned: '+d)}})\"",
    "clean:all": "npm run clean && node -e \"const fs=require('fs'); ['.node-portable','.next'].forEach(d=>{if(fs.existsSync(d)){fs.rmSync(d,{recursive:true,force:true});console.log('Cleaned: '+d)}})\"",
    "test": "vitest run"
  },
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.2.6",
    "@tailwindcss/typography": "^0.5.19",
    "@types/papaparse": "^5.5.2",
    "bcryptjs": "^3.0.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.3",
    "lucide-react": "^0.469.0",
    "next": "^16.0.10",
    "papaparse": "^5.5.3",
    "react": "^19.2.3",
    "react-day-picker": "^9.12.0",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "sql.js": "^1.12.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/json2csv": "^5.0.7",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/sql.js": "^1.4.9",
    "autoprefixer": "^10.4.17",
    "electron": "^33.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.0.10",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.17"
  },
  "main": "electron-main.js",
  "config": {
    "defaultTheme": "standard",
    "defaultColorMode": "system"
  }
}
