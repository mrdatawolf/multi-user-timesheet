{
  "appId": "com.attendance.app",
  "productName": "TRL Attendance",
  "directories": {
    "app": "electron-app",
    "output": "dist-electron",
    "buildResources": "build"
  },
  "files": [
    "**/*"
  ],
  "icon": "build/icon.ico",
  "extraResources": [
    {
      "from": ".next/standalone",
      "to": "server",
      "filter": [
        "**/*",
        "!node_modules/**",
        "!**/distribute/**",
        "!**/dist-electron/**",
        "!**/dist-server/**",
        "!**/temp-server-build/**",
        "!**/.node-portable/**",
        "!**/electron-app/**",
        "!**/nul",
        "!**/con",
        "!**/prn",
        "!**/aux"
      ]
    },
    {
      "from": ".next/standalone/node_modules",
      "to": "server/node_modules",
      "filter": [
        "**/*",
        "!**/nul",
        "!**/con",
        "!**/prn",
        "!**/aux"
      ]
    },
    {
      "from": ".next/static",
      "to": "server/.next/static"
    },
    {
      "from": "public",
      "to": "server/public"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
