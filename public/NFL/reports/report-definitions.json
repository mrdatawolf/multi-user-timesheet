{
  "brandId": "NFL",
  "version": "1.0",
  "description": "Report definitions for NFL brand",
  "reports": [
    {
      "id": "attendance-management",
      "name": "Attendance Management Report",
      "description": "Per-employee attendance summary with time code usage, day-of-week breakdown, and detailed entries",
      "apiEndpoint": "/api/reports/attendance-management",
      "type": "custom",
      "isDefault": true,
      "export": {
        "csv": true,
        "pdf": false,
        "filename": "attendance_management_report"
      }
    },
    {
      "id": "attendance-summary",
      "name": "Attendance Summary",
      "description": "View attendance entries filtered by employee, time code, and date range",
      "apiEndpoint": "/api/reports",
      "type": "table",
      "isDefault": false,
      "columns": [
        { "key": "employee_name", "header": "Employee" },
        { "key": "entry_date", "header": "Date" },
        { "key": "time_code", "header": "Time Code" },
        { "key": "hours", "header": "Hours" },
        { "key": "notes", "header": "Notes" }
      ],
      "export": {
        "csv": true,
        "pdf": false,
        "filename": "attendance_report"
      }
    }
  ]
}
