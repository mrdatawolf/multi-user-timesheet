{
  "brandId": "BT",
  "version": "1.0",
  "description": "Report definitions for BT brand",
  "reports": [
    {
      "id": "attendance-summary",
      "name": "Attendance Summary",
      "description": "View attendance entries filtered by employee, time code, and date range",
      "apiEndpoint": "/api/reports",
      "type": "table",
      "isDefault": false,
      "columns": [
        { "key": "employee_name", "header": "Employee" },
        { "key": "entry_date", "header": "Date" },
        { "key": "time_code", "header": "Time Code" },
        { "key": "hours", "header": "Hours" },
        { "key": "notes", "header": "Notes" }
      ],
      "export": {
        "csv": true,
        "pdf": false,
        "filename": "attendance_report"
      }
    },
    {
      "id": "leave-balance-summary",
      "name": "Leave Balance Summary",
      "description": "Overview of all employees' leave balances for the current year",
      "apiEndpoint": "/api/reports/leave-balance-summary",
      "type": "pivot",
      "isDefault": true,
      "export": {
        "csv": true,
        "pdf": false,
        "filename": "leave_balance_summary"
      }
    }
  ]
}
